// settings.json, created for standard text editor settings (non-Vim mode)
{
  "base_keymap": "VSCode",
  "theme": "Dracula",
  "ui_font_size": 16,
  "buffer_font_size": 18,
  // NOTE: Change the font family to your preference
  "buffer_font_family": "GeistMono Nerd Font",
  // Vim mode settings (disabled for normal editor mode)
  "vim_mode": false,
  // Use absolute line numbers
  "relative_line_numbers": false,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  // Indentation and guides
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  // Zen mode configuration
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  // Use Copilot Chat AI as default
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  // Uncomment below to use local AI with Ollama
  // "assistant": {
  //   "default_model": {
  //     "provider": "ollama",
  //     "model": "llama3.1:latest"
  //   },
  //   "version": "2",
  //   "provider": null
  // },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  // Enable inlay hints for supported languages
  "inlay_hints": {
    "enabled": true
  },
  // Language Server Protocol (LSP) configurations
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },
  "languages": {
    "TypeScript": {
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
  },
  // Use zed as commit editor in terminal
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // File scan exclusions for performance
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/node_modules"
  ],
  // Disable telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Dock settings for right-side panels
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  // Dock settings for left-side panels
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  }
}

